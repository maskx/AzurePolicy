{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "SZ"
    },
    "networkInterfaceName": {
      "type": "string",
      "defaultValue": "networkInterfaceName1"
    },
    "networkSecurityGroupName": {
      "type": "string",
      "defaultValue": "networkSecurityGroupName1"
    },
    "networkSecurityGroupRules": {
      "type": "array",
        "defaultValue": []
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "subnetName1"
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "virtualNetworkName1"
    },
    "addressPrefixes": {
      "type": "array",
      "defaultValue": []
    },
    "subnets": {
      "type": "array",
        "defaultValue": []
    },
    "publicIpAddressName": {
      "type": "string",
      "defaultValue": "publicIpAddressName1"
    },
    "publicIpAddressType": {
      "type": "string",
      "defaultValue": "publicIpAddressType1"
    },
    "publicIpAddressSku": {
      "type": "string",
      "defaultValue": "publicIpAddressSku"
    },
    "virtualMachineName": {
      "type": "string",
      "defaultValue": "virtualMachineName1"
    },
    "virtualMachineRG": {
      "type": "string",
      "defaultValue": "virtualMachineRG1"
    },
    "osDiskType": {
      "type": "string",
      "defaultValue": "osDiskType1"
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "virtualMachineSize1"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "adminUsername1"
    },
    "adminPassword": {
      "type": "secureString",
      "defaultValue": "adminPassword1"
    },
    "autoShutdownStatus": {
      "type": "string",
      "defaultValue": "autoShutdownStatus1"
    },
    "autoShutdownTime": {
      "type": "string",
      "defaultValue": "autoShutdownTime1"
    },
    "autoShutdownTimeZone": {
      "type": "string",
      "defaultValue": "autoShutdownTimeZone1"
    },
    "autoShutdownNotificationStatus": {
      "type": "string",
      "defaultValue": "autoShutdownNotificationStatus"
    },
    "autoShutdownNotificationLocale": {
      "type": "string",
      "defaultValue": "autoShutdownNotificationLocale"
    },
    "autoShutdownNotificationEmail": {
      "type": "string",
      "defaultValue": "autoShutdownNotificationEmail1"
    }
  },
  "variables": {
    "nsgId": "[resourceId('resourceGroupname', 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]",
    "vnetId": "[resourceId('resourceGroupname','Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]"
  },
  "resources": [
    {
      "name": "[parameters('networkInterfaceName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-07-01",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIpAddress": {
                "id": "[resourceId('resourceGroupname', 'Microsoft.Network/publicIpAddresses', parameters('publicIpAddressName'))]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[variables('nsgId')]"
        }
      },
      "tags": {
        "demo": "11"
      }
    },
    {
      "name": "[parameters('networkSecurityGroupName')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2019-02-01",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": "[parameters('networkSecurityGroupRules')]"
      },
      "tags": {
        "demo": "11"
      }
    },
    {
      "name": "[parameters('virtualNetworkName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2019-04-01",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": "[parameters('addressPrefixes')]"
        },
        "subnets": "[parameters('subnets')]"
      },
      "tags": {
        "demo": "11"
      }
    },
    {
      "name": "[parameters('publicIpAddressName')]",
      "type": "Microsoft.Network/publicIpAddresses",
      "apiVersion": "2019-02-01",
      "location": "[parameters('location')]",
      "properties": {
        "publicIpAllocationMethod": "[parameters('publicIpAddressType')]"
      },
      "sku": {
        "name": "[parameters('publicIpAddressSku')]"
      },
      "tags": {
        "demo": "11"
      }
    },
    {
      "name": "[parameters('virtualMachineName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-07-01",
      "location": "[parameters('location')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "osDisk": {
            "createOption": "fromImage",
            "managedDisk": {
              "storageAccountType": "[parameters('osDiskType')]"
            }
          },
          "imageReference": {
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "18.04-LTS",
            "version": "latest"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
            }
          ]
        },
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        }
      },
      "tags": {
        "demo": "11"
      }
    },
    {
      "name": "[concat('shutdown-computevm-', parameters('virtualMachineName'))]",
      "type": "Microsoft.DevTestLab/schedules",
      "apiVersion": "2017-04-26-preview",
      "location": "[parameters('location')]",
      "properties": {
        "status": "[parameters('autoShutdownStatus')]",
        "taskType": "ComputeVmShutdownTask",
        "dailyRecurrence": {
          "time": "[parameters('autoShutdownTime')]"
        },
        "timeZoneId": "[parameters('autoShutdownTimeZone')]",
        "targetResourceId": "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachineName'))]",
        "notificationSettings": {
          "status": "[parameters('autoShutdownNotificationStatus')]",
          "notificationLocale": "[parameters('autoShutdownNotificationLocale')]",
          "timeInMinutes": "30",
          "emailRecipient": "[parameters('autoShutdownNotificationEmail')]"
        }
      },
      "tags": {
        "demo": "11"
      }
    }
  ],
  "outputs": {
    "adminUsername": {
      "type": "string",
      "value": "[parameters('adminUsername')]"
    }
  }
}