{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2018-10-01",
      "name": "VNet1",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "subnet1"
          },
          {
            "name": "subnet2",
            "properties": {
              "addressPrefix": "10.0.0.0/24",
              "addressPrefixes": [
                "10.0.0.0/24",
                "10.0.0.0/16"
              ]
            }
          }
        ]
      },
      "resources": [
        {
          "type": "subnets",
          "apiVersion": "2018-10-01",
          "name": "Subnet1",
          "location": "[parameters('location')]",
          "dependsOn": [
            "VNet1"
          ],
          "properties": {
            "addressPrefix": "10.0.0.0/24"
          }
        }
      ]
    }
  ]
}